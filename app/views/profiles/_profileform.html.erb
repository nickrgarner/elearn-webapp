<%= form.fields_for :profile do |form| %>
    <div class="field">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, id: :profile_first_name %>
    </div>

    <div class="field">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, id: :profile_last_name %>
    </div>

    <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email, id: :profile_email %>
    </div>

    <div class="field">
        <%= form.label :phone_number %>
        <%= form.text_field :phone_number, id: :profile_phone_number %>
    </div>

    <div class="field">
        <%= form.label :address %>
        <%= form.text_area :address, id: :profile_address %>
    </div>

    <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password, id: :profile_password %>
    </div>

    <div class="field">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, id: :profile_password_confirmation %>
    </div>

<% end %>
