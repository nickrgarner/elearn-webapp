<p id="notice"><%= notice %></p>

<h1>Feedbacks</h1>

<table>
  <thead>
    <tr>
      <th>Course Number</th>
      <th>Course Name</th>
      <% if current_user.userable_type.to_str != "Teacher" %>
        <th>Teacher</th>
      <% end %>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
      <td><%= feedback.course_section.course.course_number %></td>
      <td><%= feedback.course_section.course.name %></td>
      <% if current_user.userable_type.to_str != "Teacher" %>
        <td><%= feedback.teacher.name %></td>
      <% end %>
        <td><%= feedback.description %></td>
        <td><%= link_to 'Show', feedback %></td>
        <% if current_user.userable_type.to_str == "Student" %>
          <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
          <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.userable_type.to_str == "Student" %>
  <%= link_to 'New Feedback', new_feedback_path %> |
<% end %>
<%= link_to 'Home', home_path %>