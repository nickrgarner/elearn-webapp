<p id="notice"><%= notice %></p>

<h1>Carts</h1>

<table>
  <thead>
  <tr>
    <th>Course Name</th>
    <th>Course Section</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @cart.cart_objects.each do |cart_object| %>
    <tr>
      <td><%= cart_object.course_section.course.name %></td>
      <td><%= cart_object.course_section.id %></td>
      <td><%= cart_object.course_section.course.price %></td>
      <td><%= button_to 'Remove from Cart', {:controller => "carts", :action => "removefromcart",
                                             :course_section => course_section}, :method => :post %></td>
    </tr>
  <% end %>
  </tbody>
</table>

