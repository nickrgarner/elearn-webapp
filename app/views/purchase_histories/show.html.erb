<p id="notice"><%= notice %></p>

<h1>Purchase History</h1>

<table>
  <thead>
  <tr>
    <th>Course Name</th>
    <th>Course Section</th>
    <th>Teacher Last Name</th>
    <th>Teacher First Name</th>
    <th>Price</th>
    <th>Purchase Date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @purchases.each do |purchase| %>
    <tr align="center">
      <td><%= purchase.course_section.course.name %></td>
      <td><%= purchase.course_section.id %></td>
      <td><%= (Teacher.find_by id: purchase.course_section.teacher_id).profile.last_name %></td>
      <td><%= (Teacher.find_by id: purchase.course_section.teacher_id).profile.first_name %></td>
      <td><%= purchase.price %></td>
      <td><%= purchase.created_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Home', home_path %>
